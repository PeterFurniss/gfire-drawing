<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} %-5p (%40F:%3L) - %m%n" />
		</layout>
	</appender>
	<logger name="uk.co.furniss.draw.dom.SvgText">
		<level value="warn" />
	</logger>
	<logger name="uk.co.furniss.draw.dom.SvgPath">
		<level value="debug" />
	</logger>
	<logger name="uk.co.furniss.draw.dom.SvgObject">
		<level value="warn" />
	</logger>
	<logger name="uk.co.furniss.draw.dom.SvgGroup">
		<level value="warn" />
	</logger>
	<logger name="uk.co.furniss.draw.dom.PiecesDocument">
		<level value="warn" />
	</logger>
		<logger name="uk.co.furniss.draw.piecemaker.PieceMakerMainBox">
		<level value="warn" />
	</logger>
	<root>
		<priority value="warn" />
		<appender-ref ref="consoleAppender" />
	</root>
</log4j:configuration>